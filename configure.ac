
dnl Require autoconf version >= 2.57
AC_PREREQ(2.57)


dnl ############# Initialization

AC_INIT([jackminimix], [0.2.1], [njh@aelius.com])

AC_CONFIG_SRCDIR([src/minimix.c])
AC_CONFIG_AUX_DIR(build-scripts) 
AC_CANONICAL_SYSTEM

dnl Version 1.7 of automake is recommended
AM_INIT_AUTOMAKE([1.7])
AM_CONFIG_HEADER([src/config.h])



dnl ############# Compiler and tools Checks

AC_PROG_CC
AC_PROG_INSTALL
AC_PROG_LN_S
AC_C_INLINE



dnl ############## Library Checks

AC_CHECK_LIB([m], [sqrt], , [AC_MSG_ERROR(Can't find libm)])
AC_CHECK_LIB([mx], [powf])

# Check for JACK (need 0.100.0 for jack_client_open)
PKG_CHECK_MODULES(JACK, jack >= 0.100.0)

# Check for LibLO
PKG_CHECK_MODULES(LIBLO, liblo >= 0.23)

# Check for WSServer
PKG_CHECK_MODULES(WSSERVER, wsserver >= 1.0)

# Check for json-c
PKG_CHECK_MODULES(JSONC, json-c >= 0.16)

dnl ############## Header Checks

AC_HEADER_STDC
AC_CHECK_HEADERS([stdlib.h string.h unistd.h])


dnl ############## Function Checks
AC_CHECK_FUNCS( atexit usleep )



dnl ############## Final Output

AC_CONFIG_FILES([Makefile src/Makefile])

AC_OUTPUT
